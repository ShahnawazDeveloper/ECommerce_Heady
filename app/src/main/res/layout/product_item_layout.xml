<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/dim_8"
    card_view:cardElevation="@dimen/dim_5"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="@dimen/dim_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Mobile"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_order_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_5"
                android:layout_marginLeft="@dimen/dim_5"
                android:gravity="end"
                android:text="Orders : 2"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dim_10"
            android:paddingBottom="@dimen/dim_10">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/dim_20"
                android:layout_height="@dimen/dim_20"
                android:src="@drawable/view" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_view_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_5"
                android:layout_marginLeft="@dimen/dim_5"
                android:layout_weight="1"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_shares"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dim_5"
                android:layout_marginRight="@dimen/dim_5"
                android:layout_weight="1"
                android:gravity="end"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_14"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/dim_20"
                android:layout_height="@dimen/dim_20"
                android:padding="@dimen/dim_3"
                android:src="@drawable/share" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_color_and_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Color"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_14" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_prize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dim_5"
                android:layout_marginLeft="@dimen/dim_5"
                android:gravity="end"
                android:text="Rs."
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_variant_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_40"
            android:layout_marginTop="@dimen/dim_10"
            android:background="@drawable/button_border"
            android:text="@string/text_variants_info"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_14" />

    </LinearLayout>
</android.support.v7.widget.CardView>